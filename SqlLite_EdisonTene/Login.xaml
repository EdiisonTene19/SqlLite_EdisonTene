<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SqlLite_EdisonTene.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana Login" FontSize="24" HorizontalOptions="Center"/>
            <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
            <Entry x:Name="txtPassword" Placeholder="password"/>
            <Button x:Name="btnIniciar" Text="INICIAR" Clicked="btnIniciar_Clicked"/>
            <Button x:Name="btnRegistrar" Text="REGISTRAR" Clicked="btnRegistrar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>